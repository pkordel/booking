<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% for room in @rooms %>
  <tr>
    <td><%=h room.name %></td>
    <td><%= link_to 'Show', property_room_path(@property, room) %></td>
    <td><%= link_to 'Edit', edit_property_room_path(@property, room) %></td>
    <td><%= link_to 'Destroy', property_room_path(@property, room), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New room', new_property_room_path(@property) %>
