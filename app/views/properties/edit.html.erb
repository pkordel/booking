<% form_for(@property) do |f| %>
  <%= f.error_messages %>
  <fieldset id="property">
		<legend>Edit property</legend>
   	<%= f.label :name %><%= f.text_field :name %>
    <%= f.label :street %><%= f.text_field :street %>
    <%= f.label :city %><%= f.text_field :city %>
    <%= f.label :postalcode %><%= f.text_field :postalcode %><br />
	  <%= f.submit "Update", :class => 'button' %>
		<%= button_to('Cancel', '', :class => "button",:onclick => "window.location = \"#{properties_path}\";return false") %>
  </fieldset>
<% end %>
