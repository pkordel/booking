<div class="show">
	<b class="top">
		<b class="b1"></b>
    <b class="b2"></b>
    <b class="b3"></b>
    <b class="b4"></b
	</b>
	<div id="property">
		<dl>
			<dt><%=h @property.name %></dt>
			<dd><%=h @property.street %></dd>
			<dd><%=h @property.postalcode %> <%=h @property.city %></dd>
			<dd><small>
			<%= link_to "[ edit ]", edit_property_path(@property) %> 
			<%= link_to "[ add room ]", new_property_room_path(@property) %> 
			<%= link_to "[ back ]", properties_path %>
			</small></dd>
		</dl>
	</div>
	<b class="bottom">
    <b class="b4"></b>
    <b class="b3"></b>
    <b class="b2"></b>
    <b class="b1"></b>
  </b>
</div>

<div id="rooms">
	<%- unless @property.rooms.blank? -%>
	<h2>Rooms</h2>
	<div class="show">
		<b class="top">
			<b class="b1"></b>
	    <b class="b2"></b>
	    <b class="b3"></b>
	    <b class="b4"></b
		</b>
		<%= render :partial => "rooms/room", :collection => @property.rooms %>
		<b class="bottom">
	    <b class="b4"></b>
	    <b class="b3"></b>
	    <b class="b2"></b>
	    <b class="b1"></b>
	  </b>
	</div>
	<%- end -%>
</div>

